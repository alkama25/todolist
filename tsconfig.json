{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "strict": true,
      "jsx": "preserve",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "noImplicitAny": false,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "skipLibCheck": true,
      "sourceMap": true,
      "outDir": "./public/js",
      "baseUrl": ".",
      "paths": {
        "@/*": [
          "./resources/js/*"
        ]
      },
      "lib": [
        "esnext",
        "dom"
      ]
    },
    "include": [
      "resources/js/**/*"
    ]
  }
  